<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VideoConferenceActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/selfPeerConnection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Self Stats"
                android:textColor="@android:color/black"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/selfPeerConnectionValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_below="@+id/selfPeerConnection"
                android:text=""
                android:textSize="10sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/activeTalkerStat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AT Stats"
                android:textColor="@android:color/black"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activeTalkerStatValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activeTalkerStat"
                android:textColor="@android:color/black"
                android:text=""
                android:textSize="10sp" />
        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/participant"
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_centerInParent="true"
        android:layout_height="300dp"/>

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/ll">

        <FrameLayout
            android:id="@+id/moderator"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/frame_border"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/localStatValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:textColor="@android:color/black"
            android:text=""
            android:textSize="10sp" />

    </RelativeLayout>
    
    <ImageView
        android:visibility="gone"
        android:id="@+id/disconnect"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/ll"
        android:layout_centerHorizontal="true"
        android:src="@drawable/disconnect"/>


    <Button
        android:visibility="gone"
        android:layout_above="@+id/outer"
        android:id="@+id/muteAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mybutton"
        android:padding="15dp"
        android:text="mute"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="12sp"/>


    <LinearLayout
        android:id="@+id/outer"
        android:layout_alignParentBottom="true"
        android:layout_above="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roomId"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/aud_vid"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/mybutton"
            android:padding="15dp"
            android:text="Aud/vid"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="12sp"/>


        <Button
            android:id="@+id/disconn"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/mybutton"
            android:padding="15dp"
            android:text="disconnect"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="12sp"/>

        <Button
            android:id="@+id/vid"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:background="@drawable/mybutton"
            android:padding="15dp"
            android:text="Audio"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="12sp"/>
    </LinearLayout>



    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:padding="5dp"
        android:background="@drawable/items_background">

        <ImageView
            android:id="@+id/mute"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/mute"/>

        <ImageView
            android:id="@+id/video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_videocam"/>

        <ImageView
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/front_camera"/>

        <ImageView
            android:id="@+id/volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/volume_on"/>
    </LinearLayout>

</RelativeLayout>